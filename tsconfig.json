{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2015",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}