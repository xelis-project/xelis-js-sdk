{
  "version": "0.8.2",
  "name": "@xelis/sdk",
  "description": "Xelis software development kit for JS",
  "exports": {
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xelis-project/xelis-js-sdk"
  },
  "homepage": "https://github.com/xelis-project/xelis-js-sdk#readme",
  "scripts": {
    "test": "jest",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run compile && node create_esm_pkg.js"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/react": "^18.2.23",
    "@types/ws": "^8.5.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "await-to-js": "^3.0.0",
    "isomorphic-ws": "^5.0.0",
    "js-base64": "^3.7.6",
    "react": "^18.2.0",
    "ws": "^8.12.1"
  }
}