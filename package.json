{
  "version": "0.11.26",
  "name": "@xelis/sdk",
  "description": "Xelis software development kit for JS",
  "exports": {
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xelis-project/xelis-js-sdk"
  },
  "homepage": "https://github.com/xelis-project/xelis-js-sdk#readme",
  "scripts": {
    "test-func": "jest -t",
    "test": "jest",
    "compile": "tsc -b ./tsconfig.cjs.json ./tsconfig.esm.json ./tsconfig.types.json",
    "fix-esm": "fix-esm-import-path ./dist/esm",
    "clean": "rimraf ./dist",
    "copy-css": "copyfiles -u 1 ./src/**/*.css ./dist/cjs && copyfiles -u 1 ./src/**/*.css ./dist/esm",
    "build": "npm run clean && npm run compile && node create_esm_pkg.js && npm run fix-esm && npm run copy-css",
    "prepublishOnly": "npm run build",
    "publish-dev": "npm publish --tag dev",
    "dev-relayer": "vite ./src/xswd/relayer/test"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/json-bigint": "^1.0.4",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.23",
    "@types/ws": "^8.5.4",
    "copyfiles": "^2.4.1",
    "fix-esm-import-path": "^1.10.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "vite": "^7.0.5"
  },
  "dependencies": {
    "await-to-js": "^3.0.0",
    "isomorphic-ws": "^5.0.0",
    "js-base64": "^3.7.6",
    "json-bigint": "^1.0.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "ws": "^8.12.1"
  }
}
